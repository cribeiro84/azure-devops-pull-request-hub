{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "https://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
  {
    "type": "chrome",
    "request": "attach",
    "name": "Attach to Chrome",
    "port": 3000,
    "webRoot": "${workspaceFolder}"
  },
    {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "https://localhost:3000/",
      "reAttach": true,
      "pathMappings": [
        {
          "url": "webpack:///",
          "path": "${workspaceFolder}/"
        }
      ]
    }
  ]
}
